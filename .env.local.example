# GitHub Configuration
NEXT_PUBLIC_GITHUB_USERNAME=your_github_username

# GitHub Raw URL for projects data
# Format: https://raw.githubusercontent.com/{username}/{repo}/{branch}
# Default: https://raw.githubusercontent.com/ajuhniawan1/portfolio-assents/main
NEXT_PUBLIC_GITHUB_RAW_URL=https://raw.githubusercontent.com/your_username/your_repository/main

# DEV.TO API Key (optional - untuk articles page)
# Get from: https://dev.to/settings/extensions
DEV_TO_API_KEY=your_dev_to_api_key

# Telegram Bot Configuration for Visitor Tracking
# Get bot token from @BotFather on Telegram
# Get chat ID from @userinfobot or your bot's chat
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Batch Notification Secret (generate random string for security)
# This protects the batch notification endpoint from unauthorized access
BATCH_NOTIFICATION_SECRET=your_random_secret_here

# Batch Notification Schedule
# Format: Set interval in minutes (e.g., 30, 60, 120)
# Examples:
#   30   - Every 30 minutes
#   60   - Every 1 hour
#   120  - Every 2 hours
#   1440 - Every 24 hours (daily)
BATCH_NOTIFICATION_INTERVAL_MINUTES=2
